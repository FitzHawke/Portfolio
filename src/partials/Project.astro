---
import { Image } from "@astrojs/image/components";
import TechTag from "../components/astro/TechTag.astro";

type Props = {
  img: {
    src: string;
    alt: string;
  };
  name: string;
  description: string;
  link: string;
  category: string[];
};

const props = Astro.props;
---

<div
  class="flex flex-col items-center gap-x-8 rounded-md bg-slate-800 p-3 md:flex-row"
>
  <div class="shrink-0">
    <a href={props.link}>
      <Image
        src={props.img.src}
        alt={props.img.src}
        format="webp"
        height="176"
        width="320"
        class="hover:translate-y-1"
      />
    </a>
  </div>

  <div>
    <div class="flex flex-col items-center gap-y-2 md:flex-row">
      <a class="hover:text-cyan-400" href={props.link}>
        <div class="text-xl font-semibold">{props.name}</div>
      </a>

      <div class="ml-3 flex flex-wrap gap-2">
        {props.category.map((cat) => <TechTag tag={cat} />)}
      </div>
    </div>

    <p class="mt-3 text-gray-400">{props.description}</p>
  </div>
</div>
